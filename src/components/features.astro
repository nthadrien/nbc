---
import { map } from "astro:schema"




const features = [
	{name:"Precision", summary: "it means what it meant bro.."}, 
	{name:"Accuracy", summary:"it means what it meant bro.."}, 
	{name:"Compliance", summary:"it means what it meant bro.."}, 
	{name: "expertise", summary:"it means what it meant bro.."}
]
---

<section class="py-5">

	<div class="container row mx-auto">

		

		<div class="col-md-6">
			<img alt="" class="img-fluid w-100 h-100 object-fit-contain rounded-2" src="/nbc/imgs/hero6.avif">
		</div>

		<div class="col-md-6">

			<span class="text-muted">Why choose us</span>
			<h2 class="display-6 fw-bold">Trusted Partnership, Proven Results</h2>
			<p class="text-muted mb-3 lead">
				Our dedicated team of professionals ensures accurate financial reporting, 
				regulatory compliance, and strategic guidance customized for your specific needs. 
			</p>

			<ul class="list-unstyled">
				{features.map( feature => <li class=" d-flex gap-3 mb-2">	
					<i class="fs-4 bi bi-check-circle-fill text-secondary" />
					<div>
						<span class="">{feature.name}</span> 
						<br/> {feature.summary}
					</div>
				</li>)}
			</ul>

			<a href="/nbc/fr/about-us" class="">
				about us <i class="bi bi-arrow-right" />
			</a>

		</div>

	</div>
</section>