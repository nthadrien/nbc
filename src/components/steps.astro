---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

type itEnum = "one"|"two"|"three";
const stepTypes: itEnum[] = ["one","two","three"];
const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);
---

<section class="py-5 hero2">

    <div class="container row text-center justify-content-center mb-4 mx-auto">
        
        <div class="col-12 col-lg-10 col-xl-8 text-center text-white">
            <p class="mb-0 fw-light">{t('steps')}</p>
            <h2>{locale ? "How It Works":"Comment Ã§a marche"}</h2>
            <p class="lead mb-4">{t('steps.desc')}</p>
        </div>

        <div class="row justify-content-center pt-5">
            <div class="col-lg-9 row">
                {stepTypes.map((item, index) => (
                        <div
                            data-iobs="down"
                            data-iobs-transition={(index + 1) / 2 + "s"}
                            class="col-lg-4"
                        >
                            <div class="rounded text-center p-3 bg-body text-bg-body  mb-5 mb-lg-0">
                                <div
                                    class="d-flex rounded-circle mx-auto align-items-center justify-content-center fs-3 fw-bold text-bg-primary border border-white border-4"
                                    style="width: 4rem; height:4rem; margin-top:-3.5rem;"
                                >
                                    {index + 1}
                                </div>
                                <h5>{t(`step.${item}`)}</h5>
                                <p>{t(`step.${item}.desc`)}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
