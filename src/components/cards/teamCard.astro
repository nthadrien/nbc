---
import type { CollectionEntry } from 'astro:content';


interface Props {
    item : CollectionEntry<"members">
}

const { item } = Astro.props;

const redirectTo = `/nbc/${item.data.pp.src}`;

---

<div class="text-center">
    <img style="height: 220px;" class="img-fluid object-fit-cover w-100" alt={item.data.pp.alt} src={redirectTo}>
    <div class="p-3">
        <span class="d-block fw-bold text-capitalize">{item.data.name}</span>
        {item.data.role}
    </div>
</div>