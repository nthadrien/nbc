---
import type { CollectionEntry } from 'astro:content';
import type { DataEntry } from 'astro:content';
import { getLangFromUrl } from '../../i18n/utils';



interface Props {
    service: CollectionEntry<"services">
}
const {service} = Astro.props;
const locale = getLangFromUrl(Astro.url);

const redirectTo = `/nbc/${locale}/services/${service.data.title}`;
---

<div data-iobs="down" class="border bg-secondary-subtle h-100 p-3 rounded-2">

    
    <i class={`fs-2 mb-3 ${service.data.icon} text-center text-secondary`} />
    

    <div class="my-3">
        <h4 class="p">{service.data.title}</h4>
        <p class="mt-3 mb-0">{service.data.description}</p>
    </div>

    <a href={redirectTo} class="fw-semibold nav-link">
        Read more <i class="bi bi-arrow-right" />
    </a>
    
</div>