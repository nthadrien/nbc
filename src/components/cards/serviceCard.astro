---
import type { CollectionEntry } from 'astro:content';
import type { DataEntry } from 'astro:content';



interface Props {
    item: CollectionEntry<"services">
}
const {item} = Astro.props;
---

<div data-iobs="down" class="border bg-secondary-subtle h-100 p-3 rounded-2">

    <i class={`fs-2 mb-3 ${item.data.icon} text-secondary`} />

    <div class="my-3">
        <h4 class="p">{item.data.title}</h4>
        <p class="mt-3 mb-0">{item.data.description}</p>
    </div>

    <a href={"/"} class="fw-semibold nav-link">
        Read more <i class="bi bi-arrow-right" />
    </a>
    
</div>