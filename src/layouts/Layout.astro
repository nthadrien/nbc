---
import "../../bootstrap.scss";
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";

import { getLangFromUrl } from '../i18n/utils.ts';
import ContactForm from "../components/forms/contactForm.astro";
import Util from "../components/utils/util.astro";

const lang = getLangFromUrl(Astro.url);


interface Props {
    title?: string;
    desc?:string;
    keywds?: string;
}

const {
    title="NBC",
    desc= "lorem ipsosuim ....",
    keywds="Accounting, comptabilites, cameroon, start-up de comptabilites"
} = Astro.props;

---

<!DOCTYPE html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/svg+xml" href="/nbc/favicon.svg" />
        <meta name="description" content={desc}>
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
        <title> {title} | N.B consulting</title>
    </head>

    <body data-bs-theme="light">
        <Navbar />
        <slot />
        <Footer />
        <ContactForm />
        <Util />
        <script src="../js/app.js" />
    </body>

</html>